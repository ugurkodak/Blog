meta(charset='UTF-8')
meta(name='description' content='Quick maffs.')
meta(name='keywords' content='ugur,kodak,blog')
meta(name='author' content='Ugur Kodak')
meta(name='viewport' content='width=device-width, initial-scale=1.0')
title #{title}
link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
style(type='text/css').
	body {
		background-color: #000;
		font-size: 16px;
	}
	body * {
		outline: none;
		font-family: 'Courier New', Courier, monospace;
		color: #aaa;
		background-color: transparent;
	}
	button, 
	button:focus {
		outline: none;
		cursor: pointer;
	}
	input {
		border: none;
	}
	//- todo: consider changing post content into a more readible font
	//- .post-content * {
	//- 	font-family: 'Arial';
	//- }
	.btn-external {
		border: none;
		color: #b33;
		outline: none;
		user-select: none;
	}
	.btn-external:hover,
	.btn-external:focus,
	.btn-external:active {
		color: #f55;		
		background-color: transparent;
		text-decoration: none;
	}
	.btn-outgoing {
		border: none;
		color: #48b;
		outline: none;
		user-select: none;
	}
	.btn-outgoing:hover,
	.btn-outgoing:focus,
	.btn-outgoing:active {
		color: #6ac;
		background-color: transparent;
	}
	.btn-current {
		color: #a0a;
	}
	.btn-local {
		border: none;
		color: #b83;
		outline: none;
	}
	.btn-local:hover,
	.btn-local:focus,
	.btn-local:active {
		color: #fb4;
		background-color: transparent;
		text-decoration: none;
	}