<div class="message row">
    <div class="col-xs-4">
	<form class="form-theme row">
	    <div class="form-group col-xs-12">
		<h3 class="form-group" style="margin: 0px">Send a message</h3>
	    </div>
	    <div class="form-group col-xs-6">
		<label class="sr-only" for="senderName">Name</label>
		<input type="text" class="form-control" id="senderName" placeholder="Name">
	    </div>
	    <div class="form-group col-xs-6" style="padding-left: 0px">
		<label class="sr-only" for="senderEmail">Email</label>
		<input type="email" class="form-control" id="senderEmail" placeholder="Email">
	    </div>
	    <div class="form-group col-xs-12">
		<textarea class="form-control" rows="4" placeholder="Message"></textarea>	
	    </div>
	    <div class="form-group col-xs-12">
		<button class="btn btn-default pull-right" type="submit">Send</button>	
	    </div>
	</form>
    </div>
    <div class="col-xs-4"></div>
    <div class="col-xs-4"></div>
</div>
